{
  "name": "roamly",
  "version": "1.0.0",
  "description": "Interaktywna mapa podróży z animacjami pojazdów",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run format && tsc && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write . --ignore-path .gitignore --ignore-unknown",
    "format:check": "prettier --check . --ignore-path .gitignore --ignore-unknown"
  },
  "keywords": [
    "map",
    "travel",
    "leaflet",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/leaflet": "^1.9.8",
    "@types/node": "^25.1.0",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitest/coverage-v8": "^1.4.0",
    "@vitest/ui": "^1.4.0",
    "autoprefixer": "^10.4.23",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jsdom": "^24.0.0",
    "postcss": "^8.5.6",
    "prettier": "^3.2.5",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.4.2",
    "vite": "^5.1.6",
    "vitest": "^1.4.0"
  },
  "dependencies": {
    "leaflet": "^1.9.4"
  }
}
